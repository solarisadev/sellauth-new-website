{% if shop.crisp_website_id %}
  <script>
    window.$crisp=[];
    window.CRISP_WEBSITE_ID="{{ shop.crisp_website_id }}";
    (function(){
      d=document;s=d.createElement("script");
      s.src="https://client.crisp.chat/l.js";
      s.async=1;
      d.getElementsByTagName("head")[0].appendChild(s);
    })();
  </script>
{% endif %}

{% if shop.tawkto_id %}
  <script>
    var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
    (function(){
    var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
    s1.async=true;
    s1.src='https://embed.tawk.to/{{ shop.tawkto_id }}';
    s1.charset='UTF-8';
    s1.setAttribute('crossorigin','*');
    s0.parentNode.insertBefore(s1,s0);
    })();
  </script>
{% endif %}

{% if shop.gtag_id %}
  <script async src="https://www.googletagmanager.com/gtag/js?id={{ shop.gtag_id }}"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '{{ shop.gtag_id }}');
  </script>
{% endif %}